{
  "version": 2,
  "functions": {
    "dist/main.js": {
      "runtime": "@vercel/node@18.19.1",
      "memory": 1024
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/main.js"
    },
    {
      "src": "/health/(.*)",
      "dest": "dist/main.js"
    },
    {
      "src": "/api-docs/(.*)",
      "dest": "dist/main.js"
    },
    {
      "src": "/static/(.*)",
      "dest": "ui/build/static/$1"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot|map|json))",
      "dest": "ui/build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "ui/build/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "buildCommand": "npm run build:production",
  "installCommand": "npm install && cd ui && npm install"
}